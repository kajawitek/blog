<h1>Posts</h1>

  <table class='table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td><%= post.author.full_name %></td>
          <% if policy(post).update? %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <% end %>
          <% if policy(post).update? %>
            <td><%= link_to 'Destroy', post, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New post', new_post_path %>
